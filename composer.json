{
    "name": "iadicola/domain",
    "description": "DTO-driven domain persistence layer for Laravel",
    "type": "library",
    "license": "MIT",

    "keywords": [
        "laravel",
        "domain",
        "dto",
        "ddd",
        "persistence",
        "clean-architecture"
    ],

    "authors": [
        {
            "name": "LS Iadicola",
            "email": "luigi.iadicola.dev@gmail.com"
        }
    ],

    "require": {
        "php": "^8.2",
        "illuminate/database": "^10.0 || ^11.0"

    },

    "autoload": {
        "psr-4": {
    "Iadicola\\Domain\\": "iadicola/Domain/src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Iadicola\\Domain\\Tests\\": "tests/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },

    "scripts": {
    "test": "vendor/bin/phpunit --testdox --colors=always",
        "analyse": "phpstan analyse"
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "alpha",
    "prefer-stable": true
}
